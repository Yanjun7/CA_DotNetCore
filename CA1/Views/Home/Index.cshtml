@{
    ViewData["Title"] = "Home Page";
    string[] images = (string[])ViewData["images"];
    string[] tags = (string[])ViewData["tags"];
}

<style>
    table {
        width: 100%;
        margin: auto;
    }

    .badge {
        font-size: 14px !important;
    }

    .like_icon {
        width: 40px;
        height: 40px;
        position: absolute;
        top: 5px;
        right: 30px;
        cursor: pointer;
    }

    .img_container {
        position: relative;
    }

    .badge_container {
        position: absolute;
        left: 10px;
        bottom: 10px;
        opacity: 0.7;
    }
</style>

<table>
    @for (int i = 0; i < images.Length; i += 3)
    {
        int j;

    <tr>
        @for (j = 0; j < 3 && i + j < images.Length; j++)
            {
        <td>
            @{
                        string url = ViewData["url_prefix"] +
                            images[i + j];

                        string[] atag = tags[i + j].Split(",");
            }
            <div class="img_container">
                <img src=@url width="350" height="235" />

                <div class="badge_container">
                    @for (int k = 0; k < atag.Length; k++)
                            {
                    <span class="badge badge-pill badge-dark">@atag[k]</span>
                            }
                </div>
            </div>
        </td>
            }

        @for (; j < 3; j++)
            {
        <td></td>
            }
    </tr>
    }
</table>


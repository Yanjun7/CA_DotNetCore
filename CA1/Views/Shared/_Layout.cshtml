<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CA1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Team9</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li>
                            <div class="search">
                                <form id="searchform" action="/Home/Search" method="post">
                                    <input id="searchBar" type="text" placeholder="Enter your search here..." name="search" />
                                    <input id="searchBtn" type="submit" value="Search" />
                                </form>
                            </div>
                        </li>
                    </ul>
                </div>

                <div class="shoppingcart" style="float:right">
                    <a href="/ShoppingCart/Index?sessionId=@ViewData["sessionId"]" style="text-decoration:none"> <img src="/img/shoppingcart.png" class="cart" width="30" /> <span id="cartIcon">0</span> </a>
                </div>

                <div style="float:right">
                    @if (ViewData["sessionId"] == null)
                    {
                        <a class="nav-link text-dark @ViewData["Is_Login"]" asp-controller="Login" asp-action="Index">Login</a>
                    }
                    else
                    {
                        <a class="nav-link text-dark" asp-controller="Logout" asp-action="Index">Logout</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - CA1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/product/search.js"></script>
    <script src="~/js/shoppingcart/AddToCart.js"></script>
@*    <script src="~/js/shoppingcart/cartIcon.js"></script>*@
    @RenderSection("Scripts", required: false)
</body>
</html>
